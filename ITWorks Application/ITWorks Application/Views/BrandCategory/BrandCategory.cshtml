@model ITWorks_Application.ViewModels.BrandCategoryViewModel
<div class="container mt-5 pt-4">
    <section>
        <h2 class="mb-4">Search</h2>

        <div class="row">
            <!-- Search Bar -->
            <div class="col-12 mb-5" position: relative;>
                @using (Html.BeginForm("SearchBrand", "BrandCategory", FormMethod.Get))
                {
                    <div class="form-group row" >
                        <div class="col-12">
                            <div class="search-container">
                                @Html.TextBox("search", ViewBag.SearchValue as string, new { @class = "form-control search-bar", placeholder = "Search here...", autocomplete = "off" })
                                <button class="btn btn-accent search-btn" type="submit" value="search"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!--End of Search Bar -->
            <div class="col-12 col-sm-12 col-md-12 col-lg-9 col-xl-9 pt-4">
                <!-- Course Details -->
                <div>
                    @if (Model.DoYouMeanList != null && @Model.DoYouMeanList.Count > 0)
                    {
                        <text>Lets Continue with the troubleshooting: Select one of this brands...</text>
                        for (int i = 0; i < Model.DoYouMeanList.Count; i++)
                        {
                            <div class="card article-card mb-5">
                                <a style="all:unset" href="RedirectToFixCategory/@Model.DoYouMeanList[i].BrandID/@Model.FAQDeviceCategoryID">
                                    <h6>Brand: @Model.DoYouMeanList[i].BrandName</h6>
                                </a>
                            </div>
                        }
                    }
                </div>
                <!-- End of Course Details -->
                <!-- Paging -->
                <div class="pagination">

                </div>
            </div>
            <!-- End Right Col -->
        </div>
        <!-- End Row -->
    </section>
    </div>

